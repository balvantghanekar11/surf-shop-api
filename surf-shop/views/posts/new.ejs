<h1>new post!</h1>

<form action="/posts" method="POST">
  <div>
    <input type="text" name="post[title]" placeholder="Title" />
  </div>
  <div>
    <input type="text" name="post[price]" placeholder="Price" />
  </div>
  <div>
    <textarea
      name="description"
      placeholder="Description"
      id=""
      cols="30"
      rows="10"
    ></textarea>
  </div>
  <div>
    <input type="text" name="post[location]" placeholder="Location" />
  </div>

  <input type="submit" />
</form>
